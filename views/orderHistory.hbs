

<div class="row">
    <div class="col-md-10 col-centered">
        <div class="order-history-wrapper border-around rad5 pad20">
            <div class="order-history-title title">
                <h1>Order History</h1>
            </div>
            <div class="order-history-description">
                {{#if orders}}
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-center">Order ID</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Address</th>
                            <th class="text-center">Order Date</th>
                            <th class="text-center">Shipping</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders}}
                            <tr>
                                <td class="text-center">{{orderID}}</td>
                                <td class="text-center">{{orderPrice}}</td>
                                <td class="text-center">{{address}}</td>
                                <td class="text-center">{{orderDate}}</td>
                                <td class="text-center">{{shipping}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <div class="empty-order">
                    You have not placed any orders!
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>
